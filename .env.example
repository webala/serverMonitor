# Server Monitor API Key (change this to a secure random string)
API_KEY=your-secure-api-key-here

# Server Configuration
PORT=3000
NODE_ENV=development

# Monitoring Intervals (in milliseconds)
SYSTEM_MONITOR_INTERVAL=5000
NETWORK_MONITOR_INTERVAL=5000
DOCKER_MONITOR_INTERVAL=10000

# Backup Configuration
BACKUP_DIR=./backups
DEFAULT_BACKUP_SCHEDULE=0 2 * * *
DEFAULT_RETENTION_DAYS=7

# Logging
LOG_LEVEL=info
LOG_DIR=./logs
